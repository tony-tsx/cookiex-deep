{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [ "ESNext", "DOM" ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [ "./dist" ]
}